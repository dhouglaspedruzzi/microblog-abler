<% @posts.each do |post| %>
  <div class="card horizontal">
    <div class="card-stacked">
      <div class="card-content">
        <span class="card-title">
          <%= post.name %> <span class="card-label-email"><%= post.email %></span>
        </span>
        <hr>
        <p><%= post.text %></p>
      </div>
    </div>
  </div>
<% end %>
