<div id="modal_signin" class="modal">
  <div class="modal-content">
    <h5>Entrar</h5>
    <div class="notifications-panel"></div>

    <%= form_for :login, url: login_path, remote: true do |f| %>
      <div class="input-field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class="input-field">
        <%= f.label :password, 'Senha' %>
        <%= f.password_field :password %>
      </div>

      <div class="input-field">
        <%= f.submit "Entrar", class: 'btn' %>
      </div>
    <% end %>
  </div>
</div>