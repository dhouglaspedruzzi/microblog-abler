<div id="modal_editar" class="modal">
  <div class="modal-content">
    <h5>Editar Perfil</h5>

    <%= form_for user do |f| %>

      <%= f.hidden_field :id %>

      <div class="input-field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="input-field">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>

      <div class="input-field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="input-field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>

      <div class="input-field">
        <%= f.label :birth_date %>
        <%= f.date_field :birth_date %>
      </div>

      <div class="input-field">
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
      </div>

      <div class="input-field">
        <%= f.submit 'Salvar', class: 'btn' %>
      </div>
    <% end %>
  </div>
</div>