<!DOCTYPE html>
<html>
  <head>
    <title>Microblog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="grey lighten-5">
    <%= notice if notice %>
    <%= alert if alert %>

    <nav class="blue-grey lighten-1" role="navigation">
      <div class="nav-wrapper container">
        <a id="logo-container" href="javascript:void(0)" class="brand-logo">Microblog</a>
        <ul class="right hide-on-med-and-down">
          <% if logged_in? %>
            <li>Ol√° <%= current_user.name %></li>
            <li><%= link_to 'Clique para sair', logout_path %></li>
          <% else %>
            <li><a href="#modal_signin" class="modal-trigger">Entrar</a></li>
            <li><a href="#modal_signup" class="modal-trigger">Cadastre-se</a></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col s3">
          <%= render partial: 'menu/list', locals: { user: current_user } %>
        </div>
        <div class="col s8  grey lighten-3">
          <%= yield %>
        </div>
      </div>
    </div>
    <%= render 'sessions/modal_sign_in' %>
    <%= render 'sessions/modal_sign_up' %>
  </body>
</html>
